---
// src/components/CategoryList.astro
import type { Category } from "@libs/microcms.ts";

interface Props {
  categories: Category[];
}
const { categories } = Astro.props;
---

<div>
  <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
    <div class="flex flex-col p-6 pb-0">
      <h3 class="text-lg font-medium">Categories</h3>
    </div>
    <ul class="space-y-2 p-6">
      {
        categories.length === 0 ? (
          <li class="text-sm text-muted-foreground">カテゴリがありません</li>
        ) : (
          categories.map((category) => (
            <li>
              <a
                href={`/category/${category.id}`}
                class="text-sm hover:underline"
              >
                {category.name}
              </a>
            </li>
          ))
        )
      }
    </ul>
  </div>
</div>
